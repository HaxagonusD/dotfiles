" for jetbrain plugins activation

Plug 'justinmk/vim-sneak'
set sneak
set which-key
set surround
set easymotion

"
set noerrorbells
set shiftwidth=2
set tabstop=2 softtabstop=2
set expandtab
set smartindent
set nu
set wrap
set encoding=UTF-8
set smartcase
set noswapfile
set nobackup
set nowritebackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set ruler
set smarttab
set showtabline=2 
set cursorline
set number 
set numberwidth=8
set clipboard=unnamedplus    " Important for copying I think
set background=dark 
set laststatus=2
set noshowmode
set splitbelow
set splitright
set mouse=a
set autoindent
set t_Co=256                            " Support 256 colors
set formatoptions-=cro                  " Stop newline continution of
set nocompatible
set relativenumber
set foldmethod=syntax
set foldlevel=99
set scrolloff=999
set cmdheight=1
set pastetoggle=<F12>
set nuw=6
set hlsearch
set ignorecase
set visualbell



inoremap jk <Esc>
inoremap kj <Esc>
imap jj <Esc>
imap kk <Esc>

nnoremap <TAB> :bnext<CR>
" SHIFT-TAB will go back
nnoremap <S-TAB> :bprevious<CR>

" " Better tabbing i.e. doesn't quit when you want to keep tabbing
vnoremap < <gv
vnoremap > >gv"

nnoremap <CR> o<Esc>
